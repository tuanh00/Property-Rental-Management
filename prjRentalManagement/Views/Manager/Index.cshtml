@model IEnumerable<prjRentalManagement.Models.manager>

@{
    ViewBag.Title = "Manager Dashboard";
}

@*Owner can list any property manager account*@
@if (Session["owner"] != null)
{
    <h2>All Managers</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
@*Manager can only see personal information*@
else
{
    <h2>Your Information</h2>
}
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th></th>
    </tr>
    @if (Session["manager"] != null)
    {
        foreach (var item in Model.Where(i => i.managerId == Convert.ToInt32(Session["manager"])))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.managerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.managerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.managerId })
                </td>
            </tr>
        }
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.managerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.managerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.managerId })
                </td>
            </tr>
        }
    }
</table>

