<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Property Rental Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Custom styles for navbar */
        .navbar-nav li {
            margin-right: 15px; 
        }

        .navbar-nav a {
            color: white; 
            text-decoration: none;
        }
   
        body {
            padding-top: 70px; 
        }
    </style>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (Session["owner"] == null && Session["manager"] == null && Session["tenant"] == null)
                {
                    @Html.ActionLink("Property Rental", "Index", "Home", null, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Dashboard", "Index", "Home", null, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ms-auto">
                    @if (Session["owner"] == null && Session["manager"] == null && Session["tenant"] == null)
                    {
                        <li>@Html.ActionLink("Owner Login", "Index", "OwnerAccess")</li>
                        <li>@Html.ActionLink("Manager Login", "Index", "ManagerAccess")</li>
                        <li>@Html.ActionLink("Tenant Login", "Index", "TenantAccess")</li>
                        <li>@Html.ActionLink("Owner Registration", "Create", "Owner")</li>
                        <li>@Html.ActionLink("Tenant Registration", "Create", "Tenant")</li>
                    }
                    else if (Session["owner"] != null)
                    {
                        <li>@Html.ActionLink("Owner Dashboard", "Index", "Owner")</li>
                        <li>@Html.ActionLink("Buildings", "Index", "Building")</li>
                        <li>@Html.ActionLink("Apartments", "Index", "Apartment")</li>
                        <li>@Html.ActionLink("Tenants", "Index", "Tenant")</li>
                        <li>@Html.ActionLink("Managers", "Index", "Manager")</li>
                        <li>@Html.ActionLink("Messages", "Index", "MessageOwner")</li>
                        <li>@Html.ActionLink("Logout", "Index", "Home")</li>
                    }
                    else if (Session["manager"] != null)
                    {
                        <li>@Html.ActionLink("Manager Dashboard", "Index", "Manager")</li>
                        <li>@Html.ActionLink("Buildings", "Index", "Building")</li>
                        <li>@Html.ActionLink("Apartments", "Index", "Apartment")</li>
                        <li>@Html.ActionLink("Message Owner", "Index", "MessageOwner")</li>
                        <li>@Html.ActionLink("Display Messages", "Index", "MessageManager")</li>
                        <li>@Html.ActionLink("Check Appointments", "Index", "Appointment")</li>
                        <li>@Html.ActionLink("Logout", "Index", "Home")</li>
                    }
                    else if (Session["tenant"] != null)
                    {
                        <li>@Html.ActionLink("Tenant Dashboard", "Index", "Tenant")</li>
                        <li>@Html.ActionLink("Apartments", "Index", "Apartment")</li>
                        <li>@Html.ActionLink("Messages", "Index", "MessageManager")</li>
                        <li>@Html.ActionLink("Book Appointment", "Create", "Appointment")</li>
                        <li>@Html.ActionLink("Logout", "Index", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Huynh Tu Anh Chau</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
