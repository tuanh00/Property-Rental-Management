@model prjRentalManagement.Models.messageManager
@{
    ViewBag.Title = "Edit";
}
<h2>Edit Message Manager</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Hidden fields -->
    @Html.HiddenFor(model => model.messageId)
    @Html.HiddenFor(model => model.message)
    @Html.HiddenFor(model => model.tenantId)

    <!-- Manager ID (hidden) -->
    @Html.Hidden("managerId", Session["manager"]?.ToString() ?? Model.managerId.ToString())

    <!-- Read-only display for the message -->
    <div class="form-group">
        @Html.LabelFor(model => model.message, htmlAttributes: new { @class = "control-label col-md-2 fw-bold"})
        <div class="col-md-10">
            @Html.DisplayFor(model => model.message)
        </div>
    </div>

    <!-- Editable responseMessage field -->
    <div class="form-group mt-2">
        <label class="control-label col-md-2 fw-bold">@Html.DisplayNameFor(model => model.responseMessage)</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.responseMessage, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control",
                       placeholder = Model.responseMessage == null ? "No response yet. Add your response here..." : null
                   }
               })
            @Html.ValidationMessageFor(model => model.responseMessage, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-3 mb-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
