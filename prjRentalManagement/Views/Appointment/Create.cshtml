@model prjRentalManagement.Models.appointment
@{
    ViewBag.Title = "Create Appointment";
}
<h2>Create Appointment</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Tenant Dropdown -->
    @if (Session["manager"] != null)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.tenantId, "Tenant Name", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
            <div class="col-md-10 mt-2">
                @Html.DropDownList("tenantId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tenantId, "", new { @class = "text-danger" })
            </div>
        </div>
    }

    <!-- Manager Dropdown -->
    @if (Session["tenant"] != null)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.managerId, "Manager Name", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
            <div class="col-md-10 mt-2">
                @Html.DropDownList("managerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.managerId, "", new { @class = "text-danger" })
            </div>
        </div>
    }

    <!-- Appointment Date -->
    <div class="form-group mt-2">
        @Html.LabelFor(model => model.appointmentDate, "Appointment Date", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-10 mt-2">
            @Html.TextBoxFor(model => model.appointmentDate, new { @class = "form-control", @type = "date" }) <!-- Updated to use type="date" -->
            @Html.ValidationMessageFor(model => model.appointmentDate, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group mt-3 mb-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
