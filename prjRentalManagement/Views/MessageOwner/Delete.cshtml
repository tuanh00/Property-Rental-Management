@model prjRentalManagement.Models.messageOwner
@{
    ViewBag.Title = "Delete Message Owner";
}
<h2>Delete Message Owner</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.message)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.message)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.responseMessage)
        </dt>
        <dd>
            @if (Model.responseMessage == null)
            {
                <span class="text-muted">No response message yet.</span>
            }
            else
            {
                @Html.DisplayFor(model => model.responseMessage)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.manager.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.manager.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.owner.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.owner.name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions mt-3 mb-3">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this message?');" />
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
