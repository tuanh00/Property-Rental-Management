@model prjRentalManagement.Models.messageOwner
@{
    ViewBag.Title = "Message Owner Details";
}
<h2>Message Owner Details</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.message)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.message)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.responseMessage)
        </dt>
        <dd>
            @if (Model.responseMessage == null)
            {
                <span class="text-muted">No response message yet.</span>
            }
            else
            {
                @Html.DisplayFor(model => model.responseMessage)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.manager.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.manager.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.owner.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.owner.name)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.messageId }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
